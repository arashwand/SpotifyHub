@model IEnumerable<SportifyHub.Controllers.CartItemViewModel>
@using SportifyHub.Controllers // For CartItemViewModel if it's not moved to ViewModels namespace

@{
    ViewData["Title"] = "سبد خرید شما";
    var totalAmount = ViewBag.TotalAmount as decimal? ?? 0m;
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}


@if (Model == null || !Model.Any())
{
    <p>سبد خرید شما خالی است.</p>
    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">رفتن به فروشگاه <i class="bi bi-shop"></i></a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>محصول</th>
                <th></th>
                <th>قیمت واحد</th>
                <th>تعداد</th>
                <th>قیمت کل</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.ProductName" style="width: 70px; height: 70px; object-fit: cover;" class="rounded me-2" />
                        }
                        else
                        {
                            <img src="~/images/placeholder-product.png" alt="@item.ProductName" style="width: 70px; height: 70px; object-fit: cover;" class="rounded me-2" />
                        }
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice.ToString("N0") تومان</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post" class="d-inline-flex align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm" style="width: 70px;" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary ms-2" title="بروزرسانی تعداد"><i class="bi bi-arrow-repeat"></i></button>
                        </form>
                    </td>
                    <td>@item.TotalPrice.ToString("N0") تومان</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger" title="حذف از سبد"><i class="bi bi-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>جمع کل:</strong></td>
                <td><strong>@totalAmount.ToString("N0") تومان</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-end mt-3">
        <a asp-controller="Shop" asp-action="Index" class="btn btn-light"> <i class="bi bi-arrow-right"></i> ادامه خرید</a>
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success">نهایی کردن خرید و پرداخت <i class="bi bi-credit-card"></i></a>
    </div>
}
