@model SportifyHub.Models.Coach

@{
    ViewData["Title"] = "حذف مربی: " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<h3>آیا از حذف این مربی مطمئن هستید؟</h3>

@if (Model == null)
{
    <p>مربی یافت نشد.</p>
    <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    return;
}

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">مکان</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>
        <dt class="col-sm-2">سالهای تجربه</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ExperienceYears)</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    </form>
</div>
