@model SportifyHub.Models.FitnessClass

@{
    ViewData["Title"] = "حذف کلاس: " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
@if (Model == null)
{
    <p>کلاس یافت نشد.</p>
    <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    return;
}
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">نوع کلاس</dt>
        <dd class="col-sm-10">@Model.ClassSportCategory.ToString()</dd>
        <dt class="col-sm-2">مربی</dt>
        <dd class="col-sm-10">@(Model.Instructor?.Name ?? "مشخص نشده")</dd>
        <dt class="col-sm-2">مکان</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post"> @* Added method="post" *@
        @Html.AntiForgeryToken() @* Added AntiForgeryToken *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    </form>
</div>
