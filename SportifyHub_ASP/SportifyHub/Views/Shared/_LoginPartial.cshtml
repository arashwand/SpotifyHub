@using Microsoft.AspNetCore.Identity
@using SportifyHub.Models // Required for ApplicationUser
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @* asp-controller="Profile" asp-action="Index" could be an alternative to direct Identity manage page *@
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">سلام @(UserManager.GetUserName(User) ?? User.Identity?.Name)!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="nav-link btn btn-link text-dark">خروج</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">ثبت نام</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">ورود</a>
    </li>
}
</ul>
