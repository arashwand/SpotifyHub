@model SportifyHub.Models.Venue

@{
    ViewData["Title"] = "ایجاد مکان ورزشی جدید";
}

<h1>@ViewData["Title"]</h1>

<h4>مکان ورزشی</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post"> @* Added method="post" for clarity *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SportType" class="form-label"></label>
                <select asp-for="SportType" asp-items="Html.GetEnumSelectList<SportCategory>()" class="form-select"></select>
                <span asp-validation-for="SportType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Location" class="form-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PricePerHour" class="form-label"></label>
                <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MapLink" class="form-label"></label>
                <input asp-for="MapLink" class="form-control" type="url" />
                <span asp-validation-for="MapLink" class="text-danger"></span>
            </div>

            @* For Images (ICollection<string>) - Using multiple text inputs for now.
               The VenuesController's Create POST action is expecting a List<string> images parameter.
               To make this work with basic HTML, each input must have the name "images".
            *@
            <div class="mb-3">
                <label class="form-label">آدرس های تصاویر</label>
                <input type="text" name="images" class="form-control mb-1" placeholder="آدرس تصویر ۱ (اختیاری)" />
                <input type="text" name="images" class="form-control mb-1" placeholder="آدرس تصویر ۲ (اختیاری)" />
                <input type="text" name="images" class="form-control" placeholder="آدرس تصویر ۳ (اختیاری)" />
                <small class="form-text text-muted">حداکثر ۳ تصویر وارد کنید. برای تصاویر بیشتر، پس از ایجاد ویرایش کنید.</small>
            </div>

            <div class="mb-3">
                <label asp-for="AvailableTimeSlotsJson" class="form-label">سانس های موجود (JSON)</label>
                <textarea asp-for="AvailableTimeSlotsJson" class="form-control" rows="3" placeholder='{ "شنبه": ["10:00-12:00", "14:00-16:00"] }'></textarea>
                <span asp-validation-for="AvailableTimeSlotsJson" class="text-danger"></span>
                <small class="form-text text-muted">فرمت صحیح JSON وارد کنید.</small>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
