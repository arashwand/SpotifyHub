@model IEnumerable<SportifyHub.Models.Venue>

@{
    ViewData["Title"] = "لیست اماکن ورزشی";
}

<h1>@ViewData["Title"]</h1>

<p>
    @* Only show Create link if user is Admin (example) *@
    @* @if (User.IsInRole("Admin")) { <a asp-action="Create">ایجاد مکان جدید</a> } *@
    <a asp-action="Create" class="btn btn-primary mb-3">ایجاد مکان جدید</a> @* Simplified for now *@
</p>

<div class="row">
    @if (!Model.Any())
    {
        <p>هیچ مکان ورزشی یافت نشد.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (item.Images != null && item.Images.Any())
                    {
                        <img src="@Url.Content(item.Images.First())" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="~/images/placeholder-venue.png" class="card-img-top" alt="تصویر موجود نیست" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.SportType)</p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Location), @Html.DisplayFor(modelItem => item.City)</small></p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">جزئیات</a>
                        @* @if (User.IsInRole("Admin")) { *@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                        @* } *@
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">قیمت ساعتی: @item.PricePerHour.ToString("N0") تومان - امتیاز: @item.Rating</small>
                    </div>
                </div>
            </div>
        }
    }
</div>
