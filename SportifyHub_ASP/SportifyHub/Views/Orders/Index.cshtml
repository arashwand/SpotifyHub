@model IEnumerable<SportifyHub.Models.Order>
@using SportifyHub.Models.Enums // For OrderStatus enum

@{
    ViewData["Title"] = "سفارشات من";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null || !Model.Any())
{
    <p>شما هنوز هیچ سفارشی ثبت نکرده اید.</p>
    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">رفتن به فروشگاه</a>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>شماره سفارش</th>
                <th>تاریخ</th>
                <th>مبلغ کل</th>
                <th>وضعیت</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.Id</td>
                    <td>@order.OrderDate.ToString("yyyy/MM/dd HH:mm")</td>
                    <td>@order.TotalAmount.ToString("N0") تومان</td>
                    <td>@order.Status.ToString()</td> @* TODO: Localize OrderStatus enum *@
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">مشاهده جزئیات</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
