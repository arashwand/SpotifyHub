@model SportifyHub.Models.Product

@{
    ViewData["Title"] = "ویرایش محصول: " + Model.Name;
    // Layout = "_AdminLayout";
}

<h1>@ViewData["Title"]</h1>
<h4>محصول</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditProduct" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Rating" /> @* Assuming Rating is not directly edited here or calculated *@

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" type="number" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">آدرس های تصاویر</label>
                @for (int i = 0; i < 3; i++) // Allow editing up to 3 images
                {
                    <input type="text" name="images" class="form-control mb-1" value="@(Model.Images != null && i < Model.Images.Count ? Model.Images.ElementAt(i) : "")" placeholder="آدرس تصویر @(i+1) (اختیاری)" />
                }
                <small class="form-text text-muted">برای حذف یک تصویر، آدرس آن را پاک کنید. برای افزودن یا تغییر، در فیلد مربوطه وارد کنید.</small>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-primary" />
                <a asp-action="Manage" class="btn btn-secondary">بازگشت به مدیریت</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
