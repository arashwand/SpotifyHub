@model SportifyHub.Models.Product

@{
    ViewData["Title"] = "ایجاد محصول جدید";
    // Layout = "_AdminLayout";
}

<h1>@ViewData["Title"]</h1>
<h4>محصول</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" /> @* Or use SelectList from ViewBag.Categories *@
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" type="number" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">آدرس های تصاویر</label>
                <input type="text" name="images" class="form-control mb-1" placeholder="آدرس تصویر ۱ (اختیاری)" />
                <input type="text" name="images" class="form-control mb-1" placeholder="آدرس تصویر ۲ (اختیاری)" />
                <input type="text" name="images" class="form-control" placeholder="آدرس تصویر ۳ (اختیاری)" />
                <small class="form-text text-muted">وارد کردن حداقل یک تصویر توصیه می شود.</small>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
                <a asp-action="Manage" class="btn btn-secondary">بازگشت به مدیریت</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
