@model IEnumerable<SportifyHub.Models.Article>

@{
    ViewData["Title"] = "مدیریت مقالات";
    // Layout = "_AdminLayout"; // If an admin-specific layout exists
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="CreateArticle" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> ایجاد مقاله جدید</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().Category)</th>
            <th>@Html.DisplayNameFor(model => model.First().Author)</th>
            <th>@Html.DisplayNameFor(model => model.First().Date)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model != null && Model.Any())
{
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Category)</td>
            <td>@Html.DisplayFor(modelItem => item.Author)</td>
            <td>@item.Date.ToString("yyyy/MM/dd")</td>
            <td>
                <a asp-action="EditArticle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="ویرایش"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="مشاهده"><i class="bi bi-info-circle"></i></a>
                <a asp-action="DeleteArticle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
    }
} else {
    <tr><td colspan="5" class="text-center">هیچ مقاله ای یافت نشد.</td></tr>
}
    </tbody>
</table>
